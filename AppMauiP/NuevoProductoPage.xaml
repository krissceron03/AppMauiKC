<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiP.NuevoProductoPage"
             Title="NuevoProductoPage">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese los datos para un nuevo producto">
                    <EntryCell x:Name="nombre"
                           Placeholder="Nombre"/>
                    <EntryCell x:Name="cantidad"
                           Placeholder="Cantidad"
                           Keyboard="Numeric"/>
                    <EntryCell x:Name="descripcion"
                           Placeholder="Descripcion"/>

                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar Producto"
            Clicked="OnClickGuardarProducto"/>
    </VerticalStackLayout>
</ContentPage>